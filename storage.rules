rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Regla para avatares de usuarios
    match /avatars/{userId} {
      // Permitir lectura a cualquier usuario autenticado
      allow read: if request.auth != null;

      // Permitir escritura solo al propietario del avatar
      allow write: if request.auth != null && request.auth.uid == userId
        // Validar que el archivo sea una imagen y menor a 5MB
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/.*');
    }

    // Regla para archivos de backup (opcional)
    match /backups/{userId}/{fileName} {
      // Solo el usuario puede acceder a sus propios backups
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Por defecto, denegar todo lo demÃ¡s
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
