# ==========================================
# FinanciaPro Suite - Environment Variables
# ==========================================
# IMPORTANT: Never commit the actual .env file with real credentials
# Copy this file to .env and fill in your actual values

# ==========================================
# Firebase Configuration (Required for Auth & Database)
# ==========================================
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id
FIREBASE_MEASUREMENT_ID=your_measurement_id

# ==========================================
# AI API Keys (Backend - Optional but recommended)
# ==========================================
# Gemini AI API Key (for AI-powered financial recommendations)
GEMINI_API_KEY=your_gemini_api_key_here

# Perplexity AI API Key (for chat features)
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# ==========================================
# External Services (Optional)
# ==========================================
# Unsplash API Key (for goal inspiration images)
UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here

# ==========================================
# Application Configuration
# ==========================================
NODE_ENV=production
PORT=3000

# ==========================================
# Security Settings (Recommended for production)
# ==========================================
# Secret key for additional encryption (generate a strong random string)
ENCRYPTION_KEY=your_secure_random_encryption_key_32_chars_minimum

# JWT Secret (if implementing custom authentication)
JWT_SECRET=your_jwt_secret_key_here

# ==========================================
# CORS Configuration
# ==========================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ==========================================
# External Database (Optional - if not using Firebase)
# ==========================================
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# ==========================================
# Rate Limiting (Security)
# ==========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# Email Service (Optional - for notifications)
# ==========================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password

# ==========================================
# Analytics & Monitoring (Optional)
# ==========================================
# SENTRY_DSN=your_sentry_dsn_here
# GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X