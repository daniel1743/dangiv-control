/* opcional: asegura que el modal no supere al toast */
#securityModal { 
  z-index: 9000;          /* más bajo que el toast */
}
/* Modal overlay */
.modal {
  display: none; 
  position: fixed;
  inset: 0;
  background: rgba(0,0,0,0.5);
  justify-content: center;
  align-items: flex-start;
  z-index: 1000;
}

.modal.show { display: flex; }

/* Dialog */
.modal-dialog {
  display: flex;
  background: #fff;
  width: 700px;
  border-radius: 16px;
  overflow: hidden;
  font-family: 'Poppins', sans-serif;
  box-shadow: 0 10px 30px rgba(0,0,0,0.15);
}

/* Lado ilustración */
.modal-illustration {
  flex: 1;
  background: linear-gradient(135deg, #eef3ff, #f9fcff);
  display: flex;
  justify-content: center;
  align-items: flex-start;
  padding: 30px;
}

.modal-illustration img {
  max-width: 90%;
  max-height: 220px;
  object-fit: contain;
}

/* Lado formulario */
.modal-content {
  flex: 1;
  padding: 30px;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20px;
}

.modal-title {
  font-size: 18px;
  font-weight: 600;
  color: #1a1a1a;
}

.modal-close {
  background: none;
  border: none;
  font-size: 22px;
  cursor: pointer;
  color: #555;
}

/* === Input Group Refinado === */
.input-group {
  display: flex;
  align-items: flex-start;
  background: var(--color-surface, #fff);
  border: 1px solid var(--color-border, #ddd);
  border-radius: 10px;
  padding: 8px 14px;
  margin-bottom: 14px;
  gap: 10px;
  transition: border-color 0.2s ease;
}

.input-group:focus-within {
  border-color: var(--color-primary, #2563eb);
  box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.12);
}

.input-group i {
  font-size: 16px;
  color: var(--color-text-secondary, #777);
  flex-shrink: 0;
}

.input-group input {
  flex: 1;
  border: none;
  outline: none;
  font-size: 15px;
  background: transparent;
  color: var(--color-text, #111);
  font-family: var(--font-family-base, 'Inter', sans-serif);
  min-width: 0;
}

.input-group input::placeholder {
  color: var(--color-text-secondary, #aaa);
  font-style: italic;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.input-group .toggle-pass {
  cursor: pointer;
  color: var(--color-text-secondary, #888);
  flex-shrink: 0;
  transition: color 0.2s ease;
}

.input-group .toggle-pass:hover {
  color: var(--color-primary, #2563eb);
}

/* === Footer del modal === */
.modal-footer {
  display: flex;
  justify-content: flex-end;
  gap: 10px;
  margin-top: auto;
}

.btn-cancel {
  background: none;
  border: none;
  color: #666;
  font-weight: 500;
  cursor: pointer;
}

.btn-primary {
  background: #2563eb; /* Azul en modo claro */
  color: #fff;
  border: none;
  padding: 10px 20px;
  border-radius: 10px;
  cursor: pointer;
  font-weight: 500;
}

body, .modal {
  font-family: var(--font-family-base);
}

/* === Modo oscuro para el modal de seguridad === */
[data-color-scheme="dark"] .modal-dialog {
  background: #1e1e2f;
  color: #f0f0f0;
}

[data-color-scheme="dark"] .modal-illustration {
  background: linear-gradient(135deg, #1a1a28, #222233);
}

[data-color-scheme="dark"] .modal-title { color: #f5f5f5; }
[data-color-scheme="dark"] .modal-close { color: #bbb; }

[data-color-scheme="dark"] .input-group {
  background: #2a2a3d;
  border: 1px solid #444;
}

[data-color-scheme="dark"] .input-group input {
