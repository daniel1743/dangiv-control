/* END PERPLEXITY DESIGN SYSTEM */
/* Custom styles for Dan&Giv Control Finance App */

/* Layout */
body {
    margin: 0;
    padding: 0;
    font-family: var(--font-family-base);
    background-color: var(--color-background);
    color: var(--color-text);
}

/* Header */
.header {
  background-color: var(--color-primary);
  color: var(--color-btn-primary-text);
  height: 70px;
  /* ðŸ”¹ fijamos altura exacta */
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  box-shadow: var(--shadow-md);
  display: flex;
  align-items: flex-start;
}

.header-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-16);
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
}

.logo {
    display: flex;
    align-items: flex-start;
    gap: var(--space-12);
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
}

.logo i {
    font-size: var(--font-size-2xl);
}

.header-actions {
  display: flex;
  align-items: flex-start;
  gap: 20px;
  /* Aumentamos el espacio entre los elementos (íconos y botón) */
}

/* Quedará así */
.header-actions .btn i,
.header-actions .notifications i {
  font-size: 20px;
  width: 24px;
  /* Añadido para darles un contenedor idéntico */
  text-align: center;
  /* Añadido para centrar el glifo del ícono */
}

.notifications {
    position: relative;
    cursor: pointer;
    .notifications:hover {
        background-color: rgba(0, 0, 0, 0.05);
        /* claro */
      }
    
      [data-color-scheme="dark"] .notifications:hover {
        background-color: rgba(255, 255, 255, 0.08);
        /* oscuro */
      }
    transition: background-color var(--duration-fast) var(--ease-standard);
}

.notifications:hover {
    background-color: rgba(255, 255, 255, 0.1);
}

.notification-badge

/* Main Layout */
.main-layout {
  display: flex;
  margin-top: 70px;
  /* ðŸ”¹ igual a altura del header */
  min-height: calc(100vh - 70px);
}
/* Sidebar */
.sidebar {
  width: 260px;
  background-color: var(--color-surface);
  border-right: 1px solid var(--color-border);
  padding: var(--space-24) 0;
  position: fixed;
  left: 0;
  top: 80px;
  bottom: 0;
  overflow-y: auto;
  z-index: 100;
  /* Sidebar por encima del contenido */
}



.nav-item {
    display: flex;
    align-items: flex-start;
    gap: var(--space-12);
    width: 100%;
    padding: var(--space-12) var(--space-16);
    background: none;
    border: none;
    color: var(--color-text-secondary);
    font-size: var(--font-size-md);
    border-radius: var(--radius-base);
    margin-bottom: var(--space-8);
    cursor: pointer;
    transition: all var(--duration-fast) var(--ease-standard);
    text-align: left;
}

.nav-item:hover {
    background-color: rgba(var(--color-teal-500-rgb), 0.1);
      color: var(--color-primary);
}

.nav-item.active {
  background-color: var(--color-primary);
    color: var(--color-btn-primary-text);
}

.nav-item i {
    width: 20px;
    text-align: center;
}

/* Main Content */
.main-content {
  position: relative;
  /* Añadimos posición relativa */
  flex: 1;
  margin-left: 260px;
  padding: var(--space-32);
  background-color: var(--color-background);
  z-index: 1;
  /* Contenido principal con z-index bajo */
  min-height: calc(100vh - 80px);
  /* Asegura altura completa */
}

/* Sections */
.section {
    display: none;
}

.section.active {
    display: block;
}

.section-header {
    margin-bottom: var(--space-32);
}

.section-header h1 {
    margin-bottom: var(--space-8);
    color: var(--color-text);
}

.section-header p {
    color: var(--color-text-secondary);
    font-size: var(--font-size-lg);
    margin: 0;
}

/* Stats Grid */
.stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-24);
    margin-bottom: var(--space-32);
}
.stat-card,
.card {
  position: relative;
  z-index: 2;
  /* Tarjetas ligeramente por encima del contenido base */
}

@media (min-width: 768px) {
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: var(--space-24);
  }
}

.stat-card {
  background-color: var(--color-surface);
  border-radius: 28px;
  padding: var(--space-32);
  border: 1px solid rgba(0, 0, 0, 0.04);
  box-shadow: 0 12px 24px rgba(0, 0, 0, 0.06);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  gap: var(--space-20);
  transition: transform var(--duration-fast) var(--ease-standard),
    box-shadow var(--duration-fast) var(--ease-standard);
  min-height: 200px;
}

.stat-card .stat-header {
  display: flex;
  align-items: flex-start;
  gap: var(--space-16);
  margin-bottom: var(--space-8);
}

.stat-card .stat-header h3 {
  font-size: 1rem;
  font-weight: 500;
  margin: 0;
  color: var(--color-text);
}

.stat-card .stat-body {
  flex-grow: 1; /* Permite que el cuerpo crezca */
  display: flex;
  flex-direction: column;
  justify-content: center; /* Centra el contenido principal */
}

.stat-card .stat-footer {
  min-height: 20px; /* Espacio reservado para el texto inferior */
}

.stat-card:hover {
  transform: translateY(-3px);
  box-shadow: var(--shadow-md);
}

.stat-card--primary {
  background: linear-gradient(140deg, rgba(33, 128, 141, 0.96), rgba(33, 128, 141, 0.82));
  color: var(--color-btn-primary-text);
  border: none;
  box-shadow: 0 20px 40px rgba(33, 128, 141, 0.25);
}

/* Estilos para el contenido de la tarjeta primaria */
.stat-card--primary .stat-header h3,
.stat-card--primary .stat-value,
.stat-card--primary .stat-change {
  color: var(--color-btn-primary-text);
}

.stat-card--primary .stat-icon {
  background: rgba(255, 255, 255, 0.24);
  color: var(--color-btn-primary-text);
  border-color: rgba(255, 255, 255, 0.28);
}

.stat-icon {
  font-size: 1.8rem;
  width: 64px;
  height: 64px;
  display: grid;
  place-items: center;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(33, 128, 141, 0.18), rgba(33, 128, 141, 0.05));
  color: var(--color-primary);
  flex-shrink: 0;
  border: 1px solid rgba(33, 128, 141, 0.12);
  text-align: center;
  line-height: 1;
}

.stat-value {
  font-size: 2rem; /* Tamaño de fuente impactante */
  font-weight: 700;
  color: var(--color-text);
  margin: 0;
  line-height: 1.2;
}

.positive-balance {
  color: var(--color-success);
}

.negative-balance {
  color: var(--color-error);
}

.stat-change {
  font-size: 0.875rem;
  font-weight: 500;
  color: var(--color-text-secondary);
}

.progress-bar-container {
  width: 100%;
  background-color: var(--color-secondary);
  border-radius: var(--radius-full);
  height: 8px;
  margin-top: var(--space-8);
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  background-color: var(--color-primary);
  border-radius: var(--radius-full);
  transition: width 0.5s ease-in-out;
}

/* Dashboard Grid */
.dashboard-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: var(--space-24);
    margin-bottom: var(--space-32);
}

/* Analysis Grid */
.analysis-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-24);
    margin-bottom: var(--space-32);
}

/* Chart Container */
.chart-container {
    position: relative;
    margin: var(--space-16) 0;
    min-height: 350px; /* Altura mínima para que el gráfico no se vea pequeño */
    display: flex;
    justify-content: center;
    align-items: flex-start;
}

/* Form Styles */
.form-container {
    margin-bottom: var(--space-32);
}

.expense-form {
    background-color: var(--color-surface);
    border-radius: var(--radius-lg);
    padding: var(--space-32);
    border: 1px solid var(--color-card-border);
    box-shadow: var(--shadow-sm);
}

.form-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-20);
    margin-bottom: var(--space-24);
}

.form-actions {
    display: flex;
    justify-content: center;
}

/* Progress Bars */
.progress-bar {
    background-color: var(--color-secondary);
    border-radius: var(--radius-full);
    height: 8px;
    overflow: hidden;
    margin-top: var(--space-8);
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--color-primary), var(--color-teal-400));
  border-radius: var(--radius-full);
  transition: width 0.8s cubic-bezier(0.25, 1, 0.5, 1);
  /* Transición más suave y elegante */
}

/* Goal Card */
.goal-card {
    background-color: var(--color-surface);
    border-radius: var(--radius-lg);
    padding: var(--space-32);
    margin-bottom: var(--space-16);
    border: 1px solid var(--color-card-border);
    box-shadow: var(--shadow-sm);
}

.goal-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: var(--space-16);
}

.goal-title {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    margin: 0;
}

.goal-amount {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
}

.goal-progress {
    margin-bottom: var(--space-12);
}

.goal-percentage {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    color: var(--color-text-secondary);
    margin-top: var(--space-8);
}

.goal-deadline {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
}

/* Transaction Items */
.transaction-item {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    padding: var(--space-16);
    border-bottom: 1px solid var(--color-card-border-inner);
}

.transaction-item:last-child {
    border-bottom: none;
}

.transaction-info h4 {
    margin: 0 0 var(--space-4) 0;
    font-size: var(--font-size-md);
}

.transaction-meta {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
}

.transaction-amount {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
}

.transaction-amount.expense {
    color: var(--color-error);
}

.transaction-amount.income {
    color: var(--color-success);
}

/* Shopping List */
.shopping-item {
    display: flex;
    align-items: flex-start;
    gap: var(--space-12);
    padding: var(--space-12);
    border-bottom: 1px solid var(--color-card-border-inner);
}

.shopping-item:last-child {
    border-bottom: none;
}

.shopping-checkbox {
    width: 18px;
    height: 18px;
    border-radius: var(--radius-sm);
}

.shopping-content {
    flex: 1;
}

.shopping-product {
    font-weight: var(--font-weight-medium);
    margin-bottom: var(--space-4);
}

.shopping-details {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
}

.necessity-badge {
    padding: var(--space-4) var(--space-8);
    border-radius: var(--radius-full);
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-medium);
}

.necessity-badge.necessary {
    background-color: rgba(var(--color-success-rgb), 0.15);
    color: var(--color-success);
}

.necessity-badge.not-necessary {
    background-color: rgba(var(--color-error-rgb), 0.15);
    color: var(--color-error);
}

/* Recommendation Cards */
.recommendation-item {
    display: flex;
    align-items: start;
    gap: var(--space-12);
    padding: var(--space-16);
    background-color: var(--color-bg-1);
    border-radius: var(--radius-base);
    margin-bottom: var(--space-12);
    border-left: 4px solid var(--color-primary);
}

.recommendation-icon {
    color: var(--color-primary);
    font-size: var(--font-size-lg);
    margin-top: var(--space-2);
}

.recommendation-text {
    flex: 1;
    font-size: var(--font-size-md);
    line-height: var(--line-height-normal);
}

/* Toast Notifications */
.toast {
    position: fixed;
    top: 100px;
    right: var(--space-24);
    background-color: var(--color-surface);
    border-radius: var(--radius-base);
    box-shadow: var(--shadow-lg);
    border: 1px solid var(--color-card-border);
    padding: var(--space-16);
    z-index: 1001;
    transform: translateX(100%);
    transition: transform var(--duration-normal) var(--ease-standard);
}

.toast.show {
    transform: translateX(0);
}

.toast-content {
    display: flex;
    align-items: flex-start;
    gap: var(--space-12);
}

.toast-icon {
    font-size: var(--font-size-lg);
}

.toast.success .toast-icon {
    color: var(--color-success);
}

.toast.error .toast-icon {
    color: var(--color-error);
}

.toast.info .toast-icon {
    color: var(--color-info);
}

/* Empty States */
.empty-state {
    text-align: center;
    padding: var(--space-32);
    color: var(--color-text-secondary);
}

.empty-state i {
    font-size: var(--font-size-4xl);
    margin-bottom: var(--space-16);
    opacity: 0.5;
}

.empty-state h3 {
    margin-bottom: var(--space-8);
}

/* Unnecessary Expenses */
.unnecessary-expense {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    padding: var(--space-12);
    background-color: rgba(var(--color-error-rgb), 0.05);
    border-radius: var(--radius-base);
    margin-bottom: var(--space-8);
    border-left: 4px solid var(--color-error);
}

.unnecessary-info h4 {
    margin: 0 0 var(--space-4) 0;
    color: var(--color-error);
}

.unnecessary-meta {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
}

.unnecessary-amount {
    font-weight: var(--font-weight-bold);
    color: var(--color-error);
}

/* Responsive Design */
@media (max-width: 768px) {
    .sidebar {
        transform: translateX(-100%);
        transition: transform var(--duration-normal) var(--ease-standard);
    }
    
    .sidebar.open {
        transform: translateX(0);
    }
    
    .main-content {
        margin-left: 0;
        padding: var(--space-16);
    }
    
    .stats-grid {
        grid-template-columns: 1fr;
    }
    
    .dashboard-grid,
    .analysis-grid {
        grid-template-columns: 1fr;
    }
    
    .form-grid {
        grid-template-columns: 1fr;
    }
}

/* Loading States */
.loading {
    display: inline-block;
    width: 20px;
    height: 20px;
    border: 2px solid var(--color-border);
    border-radius: 50%;
    border-top-color: var(--color-primary);
    animation: spin 1s ease-in-out infinite;
}

@keyframes spin {
    to { transform: rotate(360deg); }
}

/* Custom Scrollbar */
::-webkit-scrollbar {
    width: 8px;
}

::-webkit-scrollbar-track {
    background: var(--color-secondary);
    border-radius: var(--radius-full);
}

::-webkit-scrollbar-thumb {
    background: var(--color-border);
    border-radius: var(--radius-full);
}

::-webkit-scrollbar-thumb:hover {
    background: var(--color-text-secondary);
}

/* Focus styles for accessibility */
*:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
}

/* Utility classes */
.text-center {
    text-align: center;
}

.text-right {
    text-align: right;
}

.mb-0 {
    margin-bottom: 0 !important;
}

.mt-16 {
    margin-top: var(--space-16);
}

.p-16 {
    padding: var(--space-16);
}

.fw-bold {
    font-weight: var(--font-weight-bold);
}

.fs-sm {
    font-size: var(--font-size-sm);
}

.opacity-70 {
    opacity: 0.7;
}
