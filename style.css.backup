/* Columna del formulario (derecha) */
.auth-dialog .modal-content {
  flex: 1;
  padding: 40px;
  background: var(--color-surface);
}

.auth-dialog .modal-header .modal-title {
  font-size: 1.5rem;
  font-weight: 700;
}

.auth-dialog .modal-body {
  padding: 0;
  /* Quitamos padding extra */
}

.auth-dialog .form-link {
  display: block;
  text-align: right;
  font-size: 0.85rem;
  margin-top: -8px;
  margin-bottom: 16px;
  color: var(--color-primary);
}

/* Footer del modal de autenticación */
.auth-footer {
  text-align: center;
  border-top: none;
  padding-top: 16px;
  margin-top: 16px;
  font-size: 0.9rem;
  color: var(--color-text-secondary);
}

/* Responsive para pantallas pequeñas */
@media (max-width: 768px) {
  .auth-dialog .modal-illustration {
    display: none;
    /* Ocultamos la ilustración en móviles */
  }

  .auth-dialog {
    width: min(400px, 95vw);
    /* Ajustamos el ancho para móviles */
  }
}
/* QUEDARÁ ASÍ (Pega esto al final de style.css) */

/* === INICIO DE SECCIÃ“N: ESTILOS RESPONSIVE PARA MÃ“VIL === */

/* Por defecto, el botón hamburguesa está oculto en pantallas grandes */
.hamburger-menu {
  display: none;
}

/* Reglas para pantallas de 768px o menos (tablets y móviles) */
/* QUEDARÁ ASÍ */
@media (max-width: 768px) {
  .navbar__actions {
    display: none;
    /* Ocultamos acciones para simplificar */
  }

  .hamburger-menu {
    display: block;
    /* Mostramos el botón hamburguesa */
  }

  .sidebar {
    /* ¡CORRECCIÃ“N AQUÍ! Forzamos la posición y el apilamiento */
    position: fixed;
    top: 68px;
    /* Altura de la navbar */
    left: 0;
    bottom: 0;
    transform: translateX(-100%);
    /* Ocultamos el sidebar fuera de la pantalla */
    z-index: 1100;
    /* Sidebar por encima de todo */
  }

  .sidebar.open {
    transform: translateX(0);
    /* Mostramos el sidebar cuando tiene la clase 'open' */
  }

  .main-content {
    margin-left: 0;
    /* El contenido ocupa todo el ancho */
    padding: var(--space-16);
    padding-top: calc(68px + var(--space-16));
  }

  .overlay {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1050;
    /* Debajo del sidebar pero encima del contenido */
    display: none;
  }
}

/* Empty State Styles */
.empty-state {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
    padding: var(--space-32);
    text-align: center;
    min-height: 300px;
    background: linear-gradient(135deg, 
        rgba(var(--color-teal-500-rgb), 0.05), 
        rgba(var(--color-teal-500-rgb), 0.02)
    );
    border-radius: var(--radius-lg);
    border: 2px dashed var(--color-border);
}

.empty-state-image {
    width: 200px;
    height: auto;
    margin-bottom: var(--space-24);
    opacity: 0.9;
    border-radius: var(--radius-lg);
}

.empty-state-content {
    max-width: 400px;
}

.empty-state-content h3 {
    color: var(--color-primary);
    margin-bottom: var(--space-12);
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-semibold);
}

.empty-state-content p {
    color: var(--color-text-secondary);
    margin-bottom: var(--space-20);
    line-height: var(--line-height-normal);
}

.empty-state .btn {
    margin-top: var(--space-8);
}

/* Quedará así (añade este bloque al final de style.css) */
/* === Insight Card (Recomendaciones IA) === */
.insight-card {
  display: flex;
  align-items: flex-start;
  gap: var(--space-16);
  background-color: var(--color-bg-1);
  /* Fondo azulado sutil */
  border: 1px solid var(--color-border);
  border-left: 4px solid var(--color-primary);
  /* Acento de color principal */
  border-radius: var(--radius-lg);
  padding: var(--space-16);
  margin-bottom: var(--space-12);
}

.insight-card__icon {
  font-size: var(--font-size-xl);
  color: var(--color-primary);
  margin-top: var(--space-4);
}

.insight-card__content {
  flex: 1;
}

.insight-card__title {
  margin: 0 0 var(--space-4) 0;
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-semibold);
  color: var(--color-text);
}

.insight-card__text {
  margin: 0;
  font-size: var(--font-size-base);
  color: var(--color-text-secondary);
  line-height: var(--line-height-normal);
}


/* === INICIO: ESTILOS DE LA INTERFAZ DE CHAT === */
.chat-history {
  height: 300px;
  /* Altura fija para el historial */
  overflow-y: auto;
  /* Scroll si los mensajes superan la altura */
  padding: var(--space-16);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-lg);
  margin-bottom: var(--space-16);
  display: flex;
  flex-direction: column;
  gap: var(--space-12);
}

.chat-message {
  display: flex;
  max-width: 80%;
}

.chat-message.ai {
  align-self: flex-start;
  /* Mensajes de la IA a la izquierda */
}

.chat-message.user {
  align-self: flex-end;
  /* Mensajes del usuario a la derecha */
}

.chat-bubble {
  padding: var(--space-12) var(--space-16);
  border-radius: var(--radius-lg);
  line-height: var(--line-height-normal);
}

.chat-message.ai .chat-bubble {
  background-color: var(--color-secondary);
  border-bottom-left-radius: var(--radius-sm);
}

.chat-message.user .chat-bubble {
  background-color: var(--color-primary);
  color: var(--color-btn-primary-text);
  border-bottom-right-radius: var(--radius-sm);
}

.chat-form {
  display: flex;
  gap: var(--space-8);
}

.chat-form input {
  flex: 1;
  /* El campo de texto ocupa todo el espacio disponible */
}

/* === FIN: ESTILOS DE LA INTERFAZ DE CHAT === */

/* === INICIO: Estilos Modernos para Formularios y Botones === */

/* 1. Estilo General para Inputs y Selects */
.form-control {
  background-color: var(--color-secondary); /* Fondo sutil */
  border: 1px solid var(--color-border);
  border-radius: var(--radius-base);
  padding: var(--space-12) var(--space-16);
  font-size: var(--font-size-base);
  color: var(--color-text);
  transition: all var(--duration-fast) var(--ease-standard);
  width: 100%;
}

.form-control:focus {
  outline: none;
  border-color: var(--color-primary);
  box-shadow: 0 0 0 3px var(--color-focus-ring); /* Anillo de foco moderno */
}

/* 2. Estilo para Labels */
.form-label {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-medium);
  color: var(--color-text-secondary);
  margin-bottom: var(--space-8);
  display: block;
}

/* 3. Contenedor de Grupo de Formulario */
.form-group {
  margin-bottom: var(--space-20);
}

/* 4. Estilo Consistente para Botones */
.btn {
  border-radius: var(--radius-md); /* Esquinas más redondeadas */
  font-weight: var(--font-weight-semibold);
  padding: var(--space-12) var(--space-20);
  transition: all var(--duration-normal) var(--ease-standard);
}

.btn--primary {
  background-color: var(--color-primary);
  color: var(--color-btn-primary-text);
  box-shadow: var(--shadow-sm);
}

.btn--primary:hover {
  background-color: var(--color-primary-hover);
  transform: translateY(-2px);
  box-shadow: var(--shadow-md);
}

.btn--secondary {
  background-color: var(--color-secondary);
  color: var(--color-text);
  border: 1px solid var(--color-border);
}

.btn--secondary:hover {
  background-color: var(--color-secondary-hover);
  border-color: var(--color-primary);
}

/* 5. Grid para Formularios */
.form-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: var(--space-20);
}

/* === FIN: Estilos Modernos para Formularios y Botones === */
